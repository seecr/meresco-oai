from os import system                             #DO_NOT_DISTRIBUTE
from sys import path as sysPath                   #DO_NOT_DISTRIBUTE
system('find .. -name "*.pyc" | xargs rm -f')     #DO_NOT_DISTRIBUTE
                                                  #DO_NOT_DISTRIBUTE
from glob import glob                             #DO_NOT_DISTRIBUTE
for path in glob('../deps.d/*'):                  #DO_NOT_DISTRIBUTE
    sysPath.insert(0, path)                       #DO_NOT_DISTRIBUTE
sysPath.insert(0,'..')                            #DO_NOT_DISTRIBUTE

import sys
from os import remove
from os.path import join, isfile
from bsddb import btopen


def convert(path):
    if isfile(join(path, 'change.json')):
        print 'Previous jazz is crashed. Please fix this first with jazz version 3!'
        exit(2)
    stamp2identifier = btopen(join(path, "stamp2identifier.bd"))
    identifier2setSpecs = btopen(join(path, "identifier2setSpecs.bd"))
    if isfile(join(path, "stamp2identifier2setSpecs.bd")):
        raise ValueError("stamp2identifier2setSpecs already exists. You're halfway a conversion, please fix this")
    identifierDict = btopen(join(path, "stamp2identifier2setSpecs.bd"))

    for key, value in stamp2identifier.items():
        identifierDict["st:" + key] = value

    for key, value in identifier2setSpecs.items():
        identifierDict["ss:" + key] = value

    identifierDict.sync()
    identifierDict.close()

    remove(join(path, "stamp2identifier.bd"))
    remove(join(path, "identifier2setSpecs.bd"))

def main():
    if len(sys.argv) != 2:
        print 'Usage: %s [OAI directory]' % sys.argv[0]
        exit(1)
    directory = sys.argv[1]
    versionFile = join(directory, 'oai.version')
    version = open(versionFile).read()
    assert version == '3', repr(version)
    convert(directory)
    open(versionFile, 'w').write('4')
    print "Finished converting %s to OAI data format v4." % directory

if __name__ == '__main__':
    main()

